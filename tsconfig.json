{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esNext",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": true,
    "paths": {
      "@archon/jotai-hocuspocus/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
